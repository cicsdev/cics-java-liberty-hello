<server description="CICS Liberty web application template configuration">
    <!-- Enable features -->
    <featureManager>
        <feature>cicsts:core-1.0</feature>
        <feature>jsp-2.3</feature>
    </featureManager>

    <!-- Default HTTP End Point -->
    <httpEndpoint id="defaultHttpEndpoint" host="*" httpPort="9080" />

    <!-- Reduce z/FS overheads by reducing configuratiom and application polling -->
    <config monitorInterval="5s" updateTrigger="polled" />
    <applicationMonitor updateTrigger="disabled" dropins="dropins" dropinsEnabled="false" pollingRate="5s" />
</server>
